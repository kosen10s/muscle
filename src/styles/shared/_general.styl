html
  color text-color
  background-color site-background-color
  text-align center

a
  color text-color

img
  max-width 100%

body
  &:before
    content          ""
    background-image url('../images/tira.jpg')
    background-size  cover
    display          block
    position         fixed
    z-index          -1
    top              -20px
    left             -20px
    height           120%
    width            120%
    -webkit-filter   blur(5px)
    -moz-filter      blur(5px)
    -o-filter        blur(5px)
    -ms-filter       blur(5px)
    filter           blur(5px)
    opacity          0.8;

.monument
  img
    width 100%
  margin 10px auto
  width 80%
  background-color #4d4d4d
  position relative
  box-shadow 0px 2px 2px rgba(0,0,0,0.3)
  iframe
    width 100%
    height 300px
  .description
    position absolute
    box-shadow 0px 2px 2px rgba(0,0,0,0.3)
    bottom 320px
    left -10px
    width 60%
    padding 10px 20px 10px 10px
    background-color rgba(0,80,40,0.8)
    h3
      font-size 20px
      font-weight bold
    p
      font-size 14px
      line-height 21px
      margin-top 10px
