html
  color text-color
  background-color site-background-color

a
  color text-color

img
  max-width 100%

body
  padding-bottom 100px
  &:before
    content          ""
    background-image url('../images/background.png')
    background-size  cover
    display          block
    position         fixed
    z-index          -1
    top              -20px
    left             -20px
    height           120%
    width            120%
    -webkit-filter   blur(5px)
    -moz-filter      blur(5px)
    -o-filter        blur(5px)
    -ms-filter       blur(5px)
    filter           blur(5px)
    opacity          0.8;

.contents
  max-width 700px
  width 95%
  margin 0 auto
  line-height 60px
  strong
    font-size 40px
    line-height 60px
    font-weight bold
  h3
    font-size 30px
    margin 50px 0 20px
  ul
    list-style-type circle
    margin 20px
